package fileIo;

import java.io.File;
import java.io.IOException;

import system.Settings;

public class ProjectWriter {

	//write project description file
	public static Boolean writeProjectFile(Settings stt)
	{
		File prjFile = new File(stt.getProjectPath()+stt.getProjectName());
		
		if (prjFile==null)
			try {
				prjFile.createNewFile();
			} catch (IOException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		
		return true;
	}
	
	public static Boolean readProjectFile(Settings stt)
	{
		return true;
	}
	
