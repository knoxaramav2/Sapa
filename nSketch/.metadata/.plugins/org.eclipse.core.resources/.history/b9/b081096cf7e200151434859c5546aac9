package coordinate;

import javafx.scene.transform.Rotate;
import javafx.scene.transform.Translate;

public class Space3D {

	private Translate xPos;
	private Translate yPos;
	private Translate zPos;
	
	private Rotate rx;
	private Rotate ry;
	private Rotate rz;
	
	Space3D(Translate xp, Translate yp, Translate zp, double xr, double yr, double zr)
	{
		xPos=xp;
		yPos=yp;
		zPos=zp;
		
		rx.setAngle(xr);
		ry.setAngle(yr);
		rz.setAngle(zr);
	}
}
