package coordinate;

import javafx.scene.transform.Rotate;
import javafx.scene.transform.Scale;
import javafx.scene.transform.Translate;

public class Space3D {

	private Translate xPos;
	private Translate yPos;
	private Translate zPos;
	
	private Rotate rx;
	private Rotate ry;
	private Rotate rz;
	
	private Scale scale;
	
	Space3D(double xp, double yp, double zp, double xr, double yr, double zr, Scale sc)
	{
		xPos=xp;
		yPos=yp;
		zPos=zp;
		
		rx.setAngle(xr);
		ry.setAngle(yr);
		rz.setAngle(zr);
		
		rx.setAxis(Rotate.X_AXIS);
		ry.setAxis(Rotate.Y_AXIS);
		rz.setAxis(Rotate.Z_AXIS);
		
		scale = sc;
	}
	
	public void setScale(Scale sc)
	{
		scale = sc;
	}
}
