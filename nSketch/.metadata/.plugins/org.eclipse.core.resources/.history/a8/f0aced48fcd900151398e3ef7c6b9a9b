package system;

import java.util.ArrayList;

class Version
{
	int MAJOR;
	int MINOR;
	int PATCH;
	
	public Version()
	{
		MAJOR=0;
		MINOR=0;
		PATCH=0;
	}
}

/*
 * Stores all project information
 * 
 */
public class Settings {

	//project information
	String projectName;
	Version version;
	
	//file tracking
	ArrayList <String> ProjectFiles = null;
	
	public Settings()
	{
		projectName = new String();
		version = new Version();
	}
	
	public void setProjectName(String name)
	{
		projectName=name;
	}
	
	public void setVersion(int M, int m, int p)
	{
		version.MAJOR=M;
		version.MINOR=m;
		version.PATCH=p;
	}
	
	
	public String getName()
	{
		return projectName;
	}

}
